{
  "name": "react-shinto",
  "version": "0.1.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/designst/react-shinto"
  },
  "engines": {
    "npm": ">=3.0",
    "node": ">=6.0"
  },
  "author": "Manfred Haltner <info@designstage.ch>",
  "license": "MIT",
  "proxy": {
    "/api": {
      "target": "http://localhost:8000"
    }
  },
  "scripts": {
    "start": "better-npm-run start",
    "start:prod": "better-npm-run start:prod",
    "start:production": "yarn build && yarn start:prod",
    "build": "yarn clean:build && better-npm-run build",
    "analyze": "yarn clean:build && better-npm-run analyze",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "better-npm-run lint:js",
    "lint:style": "better-npm-run lint:style",
    "flow": "better-npm-run flow",
    "flow:stop": "better-npm-run flow:stop",
    "test": "better-npm-run test",
    "test:watch": "yarn test --watch",
    "clean:all": "yarn clean:build && yarn clean:test",
    "clean:build": "better-npm-run clean:build",
    "clean:test": "better-npm-run clean:test",
    "coveralls": "better-npm-run coveralls && yarn clean:test"
  },
  "betterScripts": {
    "start": {
      "command": "nodemon ./index.js",
      "env": {
        "NODE_PATH": "./app",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "start:prod": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./app",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "build": {
      "command": "webpack --progress --hide-modules --config ./config/webpack/webpack.prod.babel.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "analyze": {
      "command": "webpack --progress --hide-modules --config ./config/webpack/webpack.dev.babel.js",
      "env": {
        "NODE_ENV": "analyze"
      }
    },
    "lint:js": {
      "command": "eslint --fix ./app ./config ./index.js"
    },
    "lint:style": {
      "command": "stylelint --fix \"./app/**/*.css\" \"./app/**/*.scss\""
    },
    "flow": {
      "command": "flow"
    },
    "flow:stop": {
      "command": "flow stop"
    },
    "test": {
      "command": "jest --coverage",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "clean:build": {
      "command": "rimraf ./build"
    },
    "clean:test": {
      "command": "rimraf ./coverage"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "babel": {
    "env": {
      "production": {
        "plugins": [
          "transform-remove-console",
          "transform-react-inline-elements",
          "transform-react-constant-elements",
          "transform-react-remove-prop-types"
        ]
      },
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    },
    "presets": [
      [
        "env",
        {
          "modules": false,
          "useBuiltIns": true
        }
      ],
      "flow",
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "lodash",
      "dynamic-import-node",
      "react-hot-loader/babel",
      "loadable-components/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react",
      "prettier/flowtype",
      "plugin:lodash-fp/recommended"
    ],
    "plugins": [
      "react",
      "prettier",
      "jsx-a11y",
      "lodash-fp",
      "redux-saga"
    ],
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "browser": true
    },
    "rules": {
      "no-console": "off",
      "arrow-parens": "off",
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "global-require": "off",
      "no-param-reassign": "off",
      "object-curly-newline": "off",
      "no-underscore-dangle": "off",
      "function-paren-newline": "off",
      "import/no-dynamic-require": "off",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "parser": "flow",
          "singleQuote": true,
          "trailingComma": "all"
        }
      ],
      "lodash-fp/use-fp": "off",
      "lodash-fp/consistent-name": "off",
      "react/forbid-prop-types": "off",
      "react/prefer-stateless-function": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./config/webpack/webpack.dev.babel.js"
        }
      }
    },
    "globals": {
      "__DEV__": true,
      "__CLIENT__": true,
      "__SERVER__": true
    }
  },
  "eslintIgnore": [
    "config/flow"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "jest": {
    "verbose": true,
    "globals": {
      "__DEV__": true
    },
    "testMatch": [
      "<rootDir>/app/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/app/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/config/jest/setup.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/transformers/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/transformers/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^config(.*)$": "<rootDir>/app/config/$1",
      "^providers(.*)$": "<rootDir>/app/providers/$1",
      "^components(.*)$": "<rootDir>/app/components/$1",
      "^containers(.*)$": "<rootDir>/app/containers/$1"
    },
    "collectCoverageFrom": [
      "app/**/*.{js,jsx,mjs}"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server/",
      "server/middlewares/"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "axios": "0.18.0",
    "babel-polyfill": "6.26.0",
    "babel-register": "6.26.0",
    "chalk": "2.3.2",
    "compression": "1.7.2",
    "dotenv": "5.0.1",
    "dotenv-expand": "4.2.0",
    "express": "4.16.3",
    "helmet": "3.12.0",
    "history": "4.7.2",
    "hpp": "0.2.2",
    "http-proxy-middleware": "0.18.0",
    "humps": "2.0.1",
    "ip": "1.1.5",
    "loadable-components": "1.1.1",
    "lodash": "4.17.5",
    "morgan": "1.9.0",
    "prop-types": "15.6.1",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-helmet": "5.2.0",
    "react-hot-loader": "4.0.0",
    "react-intl": "2.4.0",
    "react-redux": "5.0.7",
    "react-router-config": "1.0.0-beta.4",
    "react-router-dom": "4.2.2",
    "react-router-redux": "5.0.0-alpha.9",
    "redux": "3.7.2",
    "redux-logger": "3.0.6",
    "redux-saga": "0.16.0",
    "redux-thunk": "2.2.0",
    "reselect": "3.0.1",
    "serialize-javascript": "1.4.0",
    "serve-favicon": "2.4.5"
  },
  "devDependencies": {
    "asset-require-hook": "1.2.0",
    "assets-webpack-plugin": "3.5.1",
    "autoprefixer": "8.1.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-jest": "23.0.0-alpha.0",
    "babel-loader": "7.1.4",
    "babel-plugin-dynamic-import-node": "1.2.0",
    "babel-plugin-lodash": "3.3.2",
    "babel-plugin-react-intl": "2.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-inline-elements": "6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.13",
    "babel-plugin-transform-remove-console": "6.9.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "better-npm-run": "0.1.0",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
    "coveralls": "3.0.0",
    "css-loader": "0.28.10",
    "css-modules-require-hook": "4.2.3",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.18.2",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-import-resolver-webpack": "0.8.4",
    "eslint-loader": "2.0.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-lodash-fp": "2.1.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.7.0",
    "eslint-plugin-redux-saga": "0.6.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "1.1.11",
    "flow-bin": "0.68.0",
    "html-minifier": "3.5.11",
    "image-webpack-loader": "4.2.0",
    "jest": "latest",
    "ngrok": "3.0.0",
    "node-sass": "4.7.2",
    "nodemon": "1.17.2",
    "postcss-flexbugs-fixes": "3.3.0",
    "postcss-loader": "2.1.1",
    "prettier": "1.11.1",
    "raf": "3.4.0",
    "react-dev-utils": "5.0.0",
    "react-test-renderer": "16.2.0",
    "rimraf": "2.6.2",
    "style-loader": "0.20.3",
    "stylelint": "9.1.3",
    "stylelint-config-standard": "18.2.0",
    "sw-precache-webpack-plugin": "0.11.5",
    "uglifyjs-webpack-plugin": "1.2.3",
    "url-loader": "1.0.1",
    "webpack": "4.1.1",
    "webpack-bundle-analyzer": "2.11.1",
    "webpack-cli": "2.0.12",
    "webpack-dev-middleware": "3.0.1",
    "webpack-hot-middleware": "2.21.2",
    "webpack-manifest-plugin": "2.0.0-rc.2"
  }
}
